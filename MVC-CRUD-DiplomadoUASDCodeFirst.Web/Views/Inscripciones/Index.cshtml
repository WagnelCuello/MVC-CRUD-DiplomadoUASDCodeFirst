@model IEnumerable<MVC_CRUD_DiplomadoUASDCodeFirst.Model.Models.Inscripcion>

@{
    ViewBag.Title = "Mantenimiento de Inscripciones";
}

<h2>Mantenimiento de Inscripciones</h2>

<p>
    @Html.ActionLink("Nueva Inscripción", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Curso.Descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Estudiante.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Semestre)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Curso.Descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Estudiante.Nombres)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Semestre)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.InscripcionID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.InscripcionID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.InscripcionID })
        </td>
    </tr>
}

</table>
