    ViewBag.Title = "Mantenimiento de Estudiantes";
}

<h2>Mantenimiento de Estudiantes</h2>

<p>
    @Html.ActionLink("Nuevo Estudiante", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nombres)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Apellidos)
        </th>
        <th>
            Fecha de Inscripcion @*@Html.DisplayNameFor(model => model.Fecha_Inscripcion)*@
        </th>
