@model IEnumerable<MVC_CRUD_DiplomadoUASDCodeFirst.Model.Models.Curso>

@{
    ViewBag.Title = "Mantenimiento de Cursos";
}

<h2>Mantenimiento de Cursos</h2>

<p>
    @Html.ActionLink("Nuevo Curso", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Codigo
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Descripcion)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.CursoID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Descripcion)
        </td>
        <td>
            @Html.ActionLink("Editar", "Edit", new { id=item.CursoID }) |
            @Html.ActionLink("Detalles", "Details", new { id=item.CursoID }) |
            @Html.ActionLink("Eliminar", "Delete", new { id=item.CursoID })
        </td>
    </tr>
}

</table>
